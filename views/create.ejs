<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<!-- Create Modal -->

<head>
    <title>Recipe Maker</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="./main.css" rel="stylesheet" type="text/css" media="all">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>


<div class="modifyRecipe container" id="recipeCreate">
    <h2>Add New Recipe</h2>
    <h4>Main Ingredients</h4>
    <form action="create/_id" method="POST">
        <div class="row">
            <h4>Recipe Name:</h4>
        </div>
        <input type=text name="title">
        <h4>Main Ingredients: </h4>
        <div class="container justify-content-center" id="editableIngredientList">
            <div id="listTitles" class="row">
                <div class="col">
                    <h5>Ingredient</h5>
                </div>
                <div class="col">
                    <h5>Amount</h5>
                </div>
                <div class="col">
                    <h5>Actions</h5>
                </div>
            </div>

        <!-- Ingredient list -->
        <div class="row addIngredientBtn">
            <button type="button" class="btn-primary" onclick="addRow('main')">Add Main Ingredient</button>
        </div>
            <span id="mainEnd"></span>
        </div>
        <!-- blend list -->
        <h4>Blend Ingredients: </h4>
        <div class="row addIngredientBtn">
            <button type="button" class="btn-primary" onclick="addRow('blend')">Add Blend Ingredient</button>
        </div>
            <div class="row editableIngredientListItem">
                <div class="col">
                    <input name="ingredients[]" type="text" value="First ingredient">
                </div>
                <div class="col">
                    <input name="amount" type="text" for="amount" value="2">
                    <select name="measurement">
                        <option value="teaspoon">Teaspoons</option>
                        <option selected="selected" value="tablespoons">Tablespoons</option>
                        <option value="grams">Grams</option>
                        <option value="cups">Cups</option>
                        <option value="gallons">Gallons</option>
                    </select>
                </div>
                <div class="col">
                    <button class="btn btn-danger"><img width=75% src="icons/delete.png"></button>
                    <button class="btn btn-danger"><img width=75% src="icons/duplicate.png"></button>
                </div>
            </div>
            <span id="blendEnd"></span>
            <button type="submit" class="btn btn-info btn-block">Create and Save to Recipe Database</button>
        </form>
    </div>
</div>

