<head>
    <title>Recipe Maker</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="./main.css" rel="stylesheet" type="text/css" media="all">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="scripts.js"></script>
</head>

<div id="backButton">
    <a class="btn-outline-danger" href="/">Back</a>
</div>

<div class="modifyRecipe container" id="recipeEdit">
    <h2>Create New Recipe</h2>
    <div class="flashes">
        <% if (flashMessages) { %>
        <% if (flashMessages.success) { %>
        <div class="flash success">
          <%= flashMessages.success %>
        </div>
        <% } else if (flashMessages.error) { %>
        <div class="flash error">
          <%= flashMessages.error %>
        </div>
        <% } %>
        <% } %>
      </div>
    <form action="/recipes/addrecipe" method="POST">
        <div class="row">
            <h4>Recipe Name:</h4>
        </div>
        <input style="width: 50%;" placeholder="New Recipe" type=text>
        <h4>Main Ingredients</h4>
        <div class="container justify-content-center" id="editableIngredientList">
            <div id="listTitles" class="row">
                <div class="col">
                    <h5>Ingredient</h5>
                </div>
                <div class="col">
                    <h5>Amount</h5>
                </div>
                <div class="col">
                    <h5>Actions</h5>
                </div>
            </div>
            
            <div class="row editableIngredientListItem" id="mainListItem0">
                <div class="col">
                    <input type="text" name="title" placeholder="New Ingredient">
                </div>
                <div class="col">
                    <input type="number" name="amount" placehoder="Amount Value">
                    <select name="measurement" placeholder="Amount Measurement">
                        <option value="teaspoon">Teaspoons</option>
                        <option value="tablespoons">Tablespoons</option>
                        <option value="handfulls">handfulls</option>
                        <option value="bars">Bars</option>
                        <option value="pounds">Pounds</option>
                        <option value="ounces">Ounces</option>
                    </select>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-warning" onclick="$(mainListItem0).remove()"><img width=5% src="/icons/delete.png"></button>
                    <button type="button" class="btn btn-warning" onclick="duplicateRow('main','0')"><img width=5% src="/icons/duplicate.png"></button>
                </div>
                <hr>
            </div>

            <span id="mainEnd"></span>
            <div class="row addIngredientBtn">
                <button type="button" class="btn-primary" onclick="addRow('main')">Add Main Ingredient</button>
            </div>
            <label for=hasBlend class="switch">Include Blend
                <input type="checkbox" name=hasBlend id=hasBlend>
                <span class="slider round"></span>
              </label>
            <div id="blendSection" hidden>


                <h4>Blend Ingredients</h4>
                <div class="container justify-content-center" id="editableIngredientList">
                    <div id="listTitles" class="row">
                        <div class="col">
                            <h5>Ingredient</h5>
                        </div>
                        <div class="col">
                            <h5>Amount</h5>
                        </div>
                        <div class="col">
                            <h5>Actions</h5>
                        </div>
                    </div>
                    
                    <div class="row editableIngredientListItem" id="blendListItem0">
                        <div class="col">
                            <input type="text" name="title" placeholder="New Ingredient">
                        </div>
                        <div class="col">
                            <input type="number" name="amount" placehoder="Amount Value">
                            <select name="measurement" placeholder="Amount Measurement">
                                <option value="teaspoon">Teaspoons</option>
                                <option value="tablespoons">Tablespoons</option>
                                <option value="handfulls">handfulls</option>
                                <option value="bars">Bars</option>
                                <option value="pounds">Pounds</option>
                                <option value="ounces">Ounces</option>
                            </select>
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-warning" onclick="$('#blendListItem0').remove()"><img width=5% src="/icons/delete.png"></button>
                            <button type="button" class="btn btn-warning" onclick="duplicateRow('blend','0')"><img width=5% src="/icons/duplicate.png"></button>
                        </div>
                        <hr>
                    </div>
        
                    <span id="blendEnd"></span>
                    <div class="row addIngredientBtn">
                        <button type="button" class="btn-primary" onclick="addRow('blend')">Add Blend Ingredient</button>
                    </div>
                </div>
            </div>
        <button type="submit">Save Edits</button>
    </form>
    <script src="scripts.js"></script>
    <script>
    let newMainCount = 0;
    let newBlendCount = 0; 
    let addRow = (ingredientType) => {
        let newRow = document.createElement("div")
        newRow.classList.add("row","editableIngredientListItem");
        let newIngredientHTML = `
        <div class="row editableIngredientListItem" id="${(ingredientType === "main") ? "main" : "blend"}listItem${(ingredientType === "main") ? newMainCount : newBlendCount}">
        <div class="col">
            <input type="text" name="title">
        </div>
        <div class="col">
        <input type="number" name="amount" value=0>
        <select name="measurement">
            <option value="teaspoon">Teaspoons</option>
            <option selected="selected" value="tablespoons">Tablespoons</option>
            <option value="bars">Bars</option>
            <option value="pounds">Pounds</option>
            <option value="ounces">Ounces</option>
        </select>
        </div>
        <div class="col">
            <button type="button" class="btn btn-warning" onclick="$(${(ingredientType === "main") ? "main" : "blend"}listItem${(ingredientType === "main") ? newMainCount : newBlendCount}).remove()"><img width=5% src="/icons/delete.png"></button>
            <button type="button" class="btn btn-warning" onclick="duplicateRow('"${(ingredientType === "main") ? "main" : "blend"}, '${(ingredientType === "main") ? "main" : "blend"}listItem${(ingredientType === "main") ? newMainCount : newBlendCount}.name')"><img width=5% src="/icons/duplicate.png"></button>
        </div>
        <hr>
    </div>
        `
        $(newRow).append(newIngredientHTML);
        if (ingredientType === "main") {
            newMainCount++;
            $("#mainEnd").before(newRow);
        } else if (ingredientType === "blend") {
            newBlendCount++
            $("#blendEnd").before(newRow);
        } else console.log("invalid argument passed into addrow()")
    }     
    let duplicateRow = (ingredientType, rowId) => {
        if (ingredientType === "main") {
            newMainCount++;
            let element = $(`#mainListItem${rowId}`).clone().prop('id', `mainListItem${newMainCount}`);
            $("#mainEnd").before(element);
        } else {
            newBlendCount++;
            let element = $(`#blandListItem${rowId}`).clone().prop('id', `blendListItem${newMainCount}`);
            $("#blendEnd").before(element);
        }
    }

    $('input[type=checkbox]').change(
        function(){
            if (this.checked) {
                console.log("hi")
                $('#blendSection').removeAttr('hidden')
            } else {
                $('#blendSection').attr("hidden",true)
            }
        });
        </script>
</div>