
<head>
    <title>Recipe Maker</title>
    <meta charset="utf-8">
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
    <link rel="manifest" href="icons/site.webmanifest">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="scripts.js"></script>
</head>


<form action="/<%= recipe._id %>/edit/" method="POST">
    <div class="modifyRecipe container" id="recipeEdit">
        <div class="row">
            <div class="col" id="backButton">
                <a class="col-4 btn btn-outline-danger" href="/   ">back</a>
            </div>
            <div class="col">
                <h2 class="pageHeading">Edit Ingredients</h2>
            </div>
            <div class="col">
                
            </div>
        </div>
        <div class="flashes">
            <% if (flashMessages) { %>
            <% if (flashMessages.success) { %>
            <div class="flash success">
              <%= flashMessages.success %>
            </div>
            <% } else if (flashMessages.error) { %>
            <div class="flash error">
              <%= flashMessages.error %>
            </div>
            <% } %>
            <% } %>
          </div>
    
    
    
    
    
    
          <div class="container justify-content-center">
            <div class="container justify-content-center formSection" id="editableIngredientList">
                <div class="row" >
                    <span class="col-3 listItemTitle">Recipe Name:</span>
                    <input class="col-9" placeholder="New Recipe" type=text>
                </div>
            </div>
                <div class="container justify-content-center formSection" id="editableIngredientList">
                    <h5>Main Ingredients:</h5>
                    <div id="listTitles" class="row">
                        <div class="col">
                            <h5>Ingredient</h5>
                        </div>
                        <div class="col">
                            <h5>Amount</h5>
                        </div>
                        <div class="col">
                            <h5>Actions</h5>
                        </div>
                    </div>
                    <hr>
                    <% recipe.ingredients.forEach(main => { %>
                        <div class="row editableIngredientListItem" id="mainListItem<% main.name %>">
                            <div class="col">
                                <input type="text" name="title" value="<%= main.name %>">
                            </div>
                            <div class="col">
                                <input type="number" name="amount">
                                <select name="measurement" >
                                    <option value="<%= main.measurment %>"><%= main.measurment %></option>
                                    <option value="teaspoon">Teaspoons</option>
                                    <option value="tablespoons">Tablespoons</option>
                                    <option value="bars">Bars</option>
                                    <option value="pounds">Pounds</option>
                                    <option value="ounces">Ounces</option>
                                </select>
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-warning" onclick="$(mainListItem<% main.name %>).remove()"><img width=25% src="/icons/delete.png"></button>
                                <button type="button" class="btn btn-warning" onclick="duplicateRow('main','<% main.name %>')"><img width=25% src="/icons/duplicate.png"></button>
                            </div>
                            <hr>
                        </div>
                        <% }); %>
                    <span id="mainEnd"></span>
                    <div class="row addIngredientBtn">
                        <button type="button" class="col btn btn-primary" align="center" onclick="addRow('main')">Add Main Ingredient</button>
                    </div>
                </div>
                <div row formSection>
                    <div class=col></div>
                    <div class=col>
                        Has Blend?
                    </div>
                    <label for=hasBlend class="col switch">
                        <input type="checkbox" name=hasBlend id=hasBlend checked>
                        <span class="slider round"></span>
                    </label>
                      <div class=col></div>
                </div>
            <div id="blendSection" hidden>
                <div class="container justify-content-center formSection" id="editableIngredientList">
                    <h5>Blend Ingredients</h5>
                    <div id="listTitles" class="row">
                        <div class="col">
                            <h5>Ingredient</h5>
                        </div>
                        <div class="col">
                            <h5>Amount</h5>
                        </div>
                        <div class="col">
                            <h5>Actions</h5>
                        </div>
                    </div>
                    <hr>
                    <% recipe.blends.ingredients.forEach(blend => { %>
                        <div class="row editableIngredientListItem" id="blendListItem<% blend.name %>">
                            <div class="col">
                                <input type="text" name="title" value="<%= blend.name %>">
                            </div>
                            <div class="col">
                                <input type="number" name="amount">
                                <select name="measurement" >
                                    <option value="<%= blend.measurment %>"><%= blend.measurment %></option>
                                    <option value="teaspoon">Teaspoons</option>
                                    <option value="tablespoons">Tablespoons</option>
                                    <option value="bars">Bars</option>
                                    <option value="pounds">Pounds</option>
                                    <option value="ounces">Ounces</option>
                                </select>
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-warning" onclick="$(mainListItem<% blend.name %>).remove()"><img width=25% src="/icons/delete.png"></button>
                                <button type="button" class="btn btn-warning" onclick="duplicateRow('blend','<% blend.name %>')"><img width=25% src="/icons/duplicate.png"></button>
                            </div>
                            <hr>
                        </div>
                        <% }); %>
        
                    <span id="blendEnd"></span>
                    <div class="row addIngredientBtn">
                        <button type="button" class="col btn btn-primary" align="center" onclick="addRow('blend')">Add Blend Ingredient</button>
                    </div>
                </div>
            </div>
            <!-- submit button -->
            <button class="row btn btn-success" style="width: 80%;" type="submit">Save Changes</button>
</form>
    </div>


    <script src="scripts.js"></script>
    <script>
    let newMainCount = 0;
    let newBlendCount = 0; 
    let addRow = (ingredientType) => {
        let newRow = document.createElement("div")
        newRow.classList.add("row","editableIngredientListItem");
        let newIngredientHTML = `
        <div class="row editableIngredientListItem" id="${(ingredientType === "main") ? "main" : "blend"}listItem${(ingredientType === "main") ? newMainCount : newBlendCount}">
        <div class="col">
            <input type="text" name="title" placeholder="new ingredient">
        </div>
        <div class="col">
        <input type="number" name="amount" value=0>
        <select name="measurement">
            <option value="teaspoon">Teaspoons</option>
            <option selected="selected" value="tablespoons">Tablespoons</option>
            <option value="bars">Bars</option>
            <option value="pounds">Pounds</option>
            <option value="ounces">Ounces</option>
        </select>
        </div>
        <div class="col">
            <button type="button" class="btn btn-warning" onclick="$(${(ingredientType === "main") ? "main" : "blend"}listItem${(ingredientType === "main") ? newMainCount : newBlendCount}).remove()"><img width=20% src="/icons/delete.png"></button>
            <button type="button" class="btn btn-warning" onclick="duplicateRow('"${(ingredientType === "main") ? "main" : "blend"}, '${(ingredientType === "main") ? "main" : "blend"}listItem${(ingredientType === "main") ? newMainCount : newBlendCount}.name %>')"><img width=20% src="/icons/duplicate.png"></button>
        </div>
        <hr>
    </div>
        `
        $(newRow).append(newIngredientHTML);
        if (ingredientType === "main") {
            newMainCount++;
            $("#mainEnd").before(newRow);
        } else if (ingredientType === "blend") {
            newBlendCount++
            $("#blendEnd").before(newRow);
        } else console.log("invalid argument passed into addrow()")
        }     
    let duplicateRow = (ingredientType, rowId) => {
        if (ingredientType === "main") {
            newMainCount++;
            let element = $(`#mainListItem${rowId}`).clone().prop('id', `mainListItem${newMainCount}`);
            $("#mainEnd").before(element);
        } else {
            newBlendCount++;
            let element = $(`#blandListItem${rowId}`).clone().prop('id', `blendListItem${newMainCount}`);
            $("#blendEnd").before(element);
        }
    }

    $('input[type=checkbox]').change(
        function(){
            if (this.checked) {
                console.log("hi")
                $('#blendSection').removeAttr('hidden')
            } else {
                $('#blendSection').attr("hidden",true)
            }
        });
        </script>
</div>